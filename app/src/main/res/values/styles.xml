<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:drawablePadding">5sp</item>
        <item name="android:padding">5sp</item>
    </style>


    <!-- Customize your theme here.by EditText -->
    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="colorControlActivated">@color/grey_60</item>
        <item name="colorControlHighlight">@color/grey_60</item>
        <item name="colorAccent">@color/grey_60</item>
        <item name="android:textColorHint">@color/grey_60</item>
    </style>




</resources>
